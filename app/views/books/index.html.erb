<center>
    <h3> Search titles </h3>


    <%= form_tag(books_path, method: :get) do %>
        <%= text_field_tag :title, params[:title] %>
  
    <%= submit_tag 'Search', name: nil %>

<% end %>
<% @books.each do |review| %>
<% binding.pry %>
    <% review.star_rating %>



   <p>     
        <div class="card" style="width: 10rem;">
        <img src= "<%= review.book.image%>" class="card-img-top" alt="test">
        <div class="card-body">
            <p class="card-text"><%= link_to review.book.title.upcase, book_path(review.book) %></p>
        </div>
        </div>
            
   </p> 
   
<% end %>
</center>