<%= form_with model: @book  do |f| %>
    <%= f.label :title %><br>
    <%= f.text_field :title %><br>
    <%= f.label :author%><br>
    <%= f.text_field :author %><br>
    <%= f.label :published %><br>
    <%= f.text_field :published %><br>
    <%= f.label :publisher %><br>
    <%= f.text_field :publisher%><br>
    <%= f.label :description %><br>
    <%= f.text_area :description%><br>
    <%= f.label :genre %><br>
    <%= f.text_field :genre%><br>
    <%= f.label :image%><br>
    <%= f.text_field :image%> <br>
    <%= f.label :link_to_purchase %><br>
    <%= f.url_field :link_to_purchase%><br><br>

    <%= f.submit %>
<% end %>