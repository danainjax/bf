
<%= bootstrap_form_with model: @reader, class:"w-75"  do |f| %>

   <%= f.text_field :username%>
   
    <%= f.password_field :password %>
   
    <%= f.email_field :email %>
   
    <%= f.text_field :first_name %>
    
    <%= f.text_field :last_name%>
   
    <%= f.select :favorite_genre, options_for_select(@options), prompt: "Please select"%>
   
    <%= f.text_field :favorite_book%>
    
    <%= f.file_field :profile_pic %> <br><br>

    <%= f.submit %>
<% end %>