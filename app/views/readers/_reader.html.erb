
<%= bootstrap_form_with model: @reader  do |f| %>

   <%= f.text_field :username%>
   
    <%= f.password_field :password %>
   
    <%= f.email_field :email %>
   
    <%= f.text_field :first_name %>
    
    <%= f.text_field :last_name%>
   
    <%= f.text_field :favorite_genre%>
   
    <%= f.text_field :favorite_book%>
    <%= f.label :profile_pic %><br>
    <%= f.file_field_without_bootstrap :profile_pic %> <br><br>

    <%= f.submit %>
<% end %>